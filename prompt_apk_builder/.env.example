# Environment Configuration
# Copy this file to .env and fill in your actual values

# Backend Configuration
BACKEND_URL=http://localhost:8000

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
ANDROID_APP_ID=com.your.app.id

# Optional: Webhook for CI-Callback (goes to your Edge Function / Backend)
BUILD_WEBHOOK_URL=

# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=your_username/your_repo_name
GH_BRANCH=main

# AI Provider Configuration (choose one)
AI_PROVIDER=huggingface  # Options: openai, anthropic, huggingface, ollama

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4000

# Anthropic Configuration (if using Anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_MAX_TOKENS=4000

# Hugging Face Configuration (if using Hugging Face)
HF_API_KEY=your_huggingface_api_key_here
HF_MODEL=microsoft/DialoGPT-medium

# Ollama Configuration (if using Ollama)
OLLAMA_ENDPOINT=http://localhost:11434
OLLAMA_MODEL=llama2

# Sentry Configuration (optional)
SENTRY_DSN=your_sentry_dsn_here